  <thead>
    <tr>
      <th>Image data</th>
      <th>User</th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @photos.each do |photo| %>
      <tr>
        <td><  <img src="<%= photo.image_url %>"></td>
        <td><%= photo.user %></td>
        <td><%= photo.caption %></td>
        <td><%= link_to like_photo_path(photo), method: :put do %>
        Upvote
        <%= photo.get_upvotes.size %>
        <% end %>

        <%= link_to dislike_photo_path(photo), method: :put do %>
        Downvote
        <%= photo.get_downvotes.size %>
        <% end %>
        </td>
        <% if @photos.blank? %>
  <h4>There are no photos containing the term <%= params[:search] %>.</h4>
<% end %>
